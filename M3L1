import random

from flask import Flask
app = Flask(__name__)
facts_list = ["69! adalah angka terbesar yang bisa diketik di calculator yang factorial sebelum calculatornya error",
              "Ada formula yang bisa menghitung berapa angka prima yang ada ditengah-tengah angka itu dengan akurasi yang tinggi"]
@app.route("/")
def home():
    return '<h1>click link dibawah untuk mengetahui fact unik</h1><a href="/random_fact">View a random fact!</a>'
@app.route("/random_fact")
def hello_world():
    return f'<p>{random.choice(facts_list)}</p>'
app.run(debug=True)

